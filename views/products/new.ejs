<!DOCTYPE html>
<html>

<head>
    <title>Thêm sản phẩm</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include('../partials/header') %>
        <div class="container mt-3">
            <h2>Thêm sản phẩm</h2>
            <form method="post" action="/products/new">
                <input class="form-control mb-2" type="text" name="name" placeholder="Tên" required>
                <input class="form-control mb-2" type="text" name="address" placeholder="Địa chỉ">
                <input class="form-control mb-2" type="text" name="phone" placeholder="Điện thoại">
                <select class="form-control mb-2" name="supplierId" required>
        <option value="">Chọn nhà cung cấp</option>
        <% suppliers.forEach(s => { %>
          <option value="<%= s._id %>"><%= s.name %></option>
        <% }) %>
      </select>
                <button class="btn btn-success">Lưu</button>
                <a class="btn btn-secondary" href="/products">Huỷ</a>
            </form>
        </div>
        <%- include('../partials/footer') %>
</body>

</html>