<!DOCTYPE html>
<html>

<head>
    <title>Sửa sản phẩm</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include('../partials/header') %>
        <div class="container mt-3">
            <h2>Sửa sản phẩm</h2>
            <form method="post" action="/products/<%= product._id %>/edit">
                <input class="form-control mb-2" type="text" name="name" value="<%= product.name %>" required>
                <input class="form-control mb-2" type="text" name="address" value="<%= product.address %>">
                <input class="form-control mb-2" type="text" name="phone" value="<%= product.phone %>">
                <select class="form-control mb-2" name="supplierId" required>
        <% suppliers.forEach(s => { %>
          <option value="<%= s._id %>" <%= product.supplierId && (s._id.toString() === product.supplierId.toString()) ? 'selected' : '' %>><%= s.name %></option>
        <% }) %>
      </select>
                <button class="btn btn-primary">Lưu</button>
                <a class="btn btn-secondary" href="/products">Huỷ</a>
            </form>
        </div>
        <%- include('../partials/footer') %>
</body>

</html>